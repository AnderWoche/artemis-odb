	<modelVersion>4.0.0</modelVersion>
	<groupId>net.onedaybeard</groupId>
	<artifactId>artemis-odb</artifactId>
	<version>2013-02</version>
	<packaging>jar</packaging>
	<name>artemis-odb</name>

	<properties>
		<internal.repo.path>file:///home/junkdog/opt/dev/mvn-repo</internal.repo.path>
	</properties>

